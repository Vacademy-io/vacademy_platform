APP_ENV=stage

# Preferred: direct SQLAlchemy URL (psycopg)
# DATABASE_URL=postgresql+psycopg://username:password@host:5432/dbname

# OR provide discrete parts:
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vacademy
# Optional schema override (e.g., admin core uses non-public schema)
# DB_SCHEMA=admin_core

# If you only have JDBC URL from admin-core (Spring), set it here and keep DB_USERNAME/DB_PASSWORD above:
# ADMIN_CORE_SERVICE_DB_URL=jdbc:postgresql://localhost:5432/vacademy?currentSchema=admin_core

# CORS
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Authorization,Content-Type


